---
import { Image } from "astro:assets";

const { konten } = Astro.props;
---

<div
  class="flex flex-col md:flex-row flex-wrap items-center justify-between mx-5 mt-20 p-8 rounded-[10px] shadow-md border border-[#d9d9d9]"
>
  <div class="mb-4 md:mb-0 md:mr-4 flex justify-center">
    <Image
      class="h-20 w-auto object-cover"
      inferSize
      alt="descriptive text"
      src=`${import.meta.env.STRAPI_URL}${konten.logo_CTA.data.attributes.formats.thumbnail.url}`
      loading="lazy"
    />
  </div>

  <div class="flex flex-col text-center md:text-left mb-4 md:mb-0">
    <div class="text-black text-2xl font-bold font-['Kumbh Sans']">
      {konten.Judul_CTA}
    </div>
    <div class="text-[#2b2d42] text-base font-normal">
      {konten.keterangan_CTA}
    </div>
  </div>

  <div class="flex justify-center md:justify-end w-full md:w-auto">
    <a
      href=`https://wa.me/${konten.link_CTA}`
      class="text-white bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800 font-medium rounded-md text-sm px-5 py-2.5 text-center mb-2"
    >
      Hubungi kami
    </a>
  </div>
</div>

